#include <iostream>
#include <fstream>
#include <string>
#define BLANK ' '
#define NEWLINE '\n'

using namespace std;

int main(){
	fstream inFile;
	string filePath;
	int c, l, w, i;

	cout << "Where is the file located? ";
	cin >> filePath;
	cin.get();

	inFile.open(filePath, ios::in);

	if (!inFile){
		cout << "Error! Please enter ensure you enter the proper file path." << endl << "Press enter to close the window...";
		cin.get();
		return 0;
	}
	
	else{
	int cCount, lCount, wCount;
	while ( (c = getc(inFile)) != EOF)
		if ((c != BLANK) && (c != NEWLINE) )
			++cCount;

	printf(" %d characters\n ", cCount);
	}
	return 0;
}
